>         var isDatasetEmpty = function ( data ) {
>             return !(data.hasOwnProperty('x') || data.hasOwnProperty('y') || data.hasOwnProperty('z')
>                 || data.hasOwnProperty('rotateX') || data.hasOwnProperty('rotateY') || data.hasOwnProperty('rotateZ')
>                 || data.hasOwnProperty('rotate') || data.hasOwnProperty('scale'));
>         };
> 
>         steps.forEach(function ( el, idx ) {
>             var data = el.dataset;
>             stepData["impress-" + el.id] = isDatasetEmpty(data) ? { src: 'plugin' } : { src: 'dom' };
>         })
> 
>         var resizeSteps = function ( ) {
>             plugin.onResize && plugin.onResize();
>             steps.forEach(function ( el, idx ) {            
>                 if ( !el.id ) {
>                     el.id = "step-" + (idx + 1);
>                 }
>                 if (stepData["impress-" + el.id].src === 'plugin') {
>                     css(el, {
>                         width: plugin.width() + 'px',
>                         height: plugin.height() + 'px'
>                     });
>                 }
>             });
>         };
>         resizeSteps();
